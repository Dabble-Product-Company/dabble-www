---
import settings from "../data/settings";
import Link from "./Link.astro";
import { Mail, Globe } from "lucide-astro";
---

<footer class="flex flex-col items-center w-full gap-4 px-4 py-8 justify-items-start md:px-8 md:flex-row">

    <div class="flex flex-col w-full gap-4 md:flex-row">

        <div class="flex flex-row w-full gap-6">
            <div class="flex flex-row items-center gap-1">
                <Globe class="w-4 h-4 " />
                <h6 class="text-xs">
                    <Link href={settings.url}>dabble.fyi</Link>
                </h6>
            </div>
            <div class="flex flex-row items-center gap-1">
                <Mail class="w-4 h-4 " />
                <h6 class="text-xs">
                    <Link href="mailto:mail@dabble.fyi">Contact</Link>
                </h6>
            </div>
        </div>

        <h6 class="w-full text-xs md:text-right md:order-2">
            &copy; {new Date().getFullYear()} {settings.name}
        </h6>
    </div>
</footer>
