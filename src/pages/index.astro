---
import Layout from "../layouts/Base.astro";
import Container from "../components/Container.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import settings from "../data/settings";

const title = settings.title;
const description = settings.description;

const seo = {
  title: title,
  description: description
}
---

<Layout
  seo={seo}
>
  <Container class="flex flex-col items-center justify-center">
    <div class="flex flex-col items-center justify-center mt-48 space-y-8">
      <h1 class="text-4xl font-bold text-center">Making software for makers</h1>
      <p class="text-lg text-center text-neutral-600 dark:text-neutral-400">
        <Link href="/">{title}</Link> is a Brooklyn-based product studio building apps to help people explore, create, and share creative work.
      </p>
      <p class="text-lg text-center text-neutral-600 dark:text-neutral-400">
        Our first app, <Link href="https://bobbin.app">Bobbin</Link>, launches in 2025.
      </p>
      <Button href="mailto:mail@dabble.fyi">Get in touch</Button>
    </div>
    
  </Container>
</Layout>
