---
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';
import Footer from "../components/Footer.astro";

export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
  </head>
  <body class="flex flex-col max-w-2xl mx-auto antialiased prose dark:prose-invert font-monospace prose-neutral h-dvh bg-neutral-100 dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100">
    <slot name="header" />
    <main class="grow">
      <slot />
    </main>
    <Footer/>
  </body>
</html>
